LIST = one two three

.PHONY: all single_dollar double_dollar

all: single_dollar double_dollar

double_dollar:
	@echo "=== double dollar sign example ==="
	@for i in $(LIST); do \
		echo $$i;     \
	done

single_dollar:
	@echo "=== single dollar sign example ==="
	@for i in $(LIST); do  \
		echo $i;     \
	done