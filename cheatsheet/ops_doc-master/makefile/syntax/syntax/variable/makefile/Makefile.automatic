
all: update hello.c

update:
	@touch third.c

hello.c: first.c second.c third.c
	@echo "[1;35m\$$@[0m = $@"  # $@代表规则的目标
	@echo "[1;35m\$$<[0m = $<"  # 代表规则中通过目录搜索得到的依赖文件列表的第一个依赖文件。
	@echo "[1;35m\$$^[0m = $^"  # 代表所有通过目录搜索得到的依赖文件的完整路径名(目录 + 一般文件名)列表。
	@echo "[1;35m\$$?[0m = $?"  # 代表依赖文件列表中被改变过的所有文件。
	@echo "[1;35m\$$%[0m = $%"  # 档案文件成员结构中的文件名
	@echo "[1;35m\$$*[0m = $*"  # 工作目标的主文件名,若当前目标是pro.o，则$*表示pro。
	@echo ""

first.c:

second.c:

third.c:

