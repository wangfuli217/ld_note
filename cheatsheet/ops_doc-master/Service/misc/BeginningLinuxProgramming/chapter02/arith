#!/bin/sh

#---------------------------------------------------
#	进行简单的循环，如果$x不等于10，就一直执行
#	否之退出while [条件] do {}done的循环
#	最好不要用-ne 用-lt或-le来做判断
#---------------------------------------------------

x=0
# -ne -le -lt -ge -gt -eq
while [ "$x" -ne 10 ]
do
    echo $x
   #  x=$(($x+1))		#算数运算，x=$[$x+1] 或x=(($x+1)) 或let "x=$x+1"
   # let "x=$x+1"
   #x=$[x+2]
    x=$[$x+3]
done

exit 0
