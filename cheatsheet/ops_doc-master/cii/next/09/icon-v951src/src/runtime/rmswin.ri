/*
 * drawrectangles - draw nrecs # of rectangles in array recs to binding w
 */
void drawrectangles(wbp w, XRectangle *recs, int nrecs)
   {
   register XRectangle *r;
   LOGBRUSH lb;
   HBRUSH hb, oldbrush, oldbrush2;
   HPEN hp, oldpen, oldpen2;
   STDLOCALS(w);
