procedure main()
   write()
   write("&host:      ", &host)
   write("&dateline:  ", &dateline)
   write("   &date:   ", &date)
   write("   &clock:  ", &clock)
   write("&version:   ", &version)
   write("&features:")
   every write("   ", &features)
   write("getenv(\"HOME\"):  ", getenv("HOME") | "[failed]")
   write("getenv(\"SHELL\"): ", getenv("SHELL") | "[failed]")
   write("uname -a: ", read(open("uname -a", "p")) | "[failed]")
   write()
end
